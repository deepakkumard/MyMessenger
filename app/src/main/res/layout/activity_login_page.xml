<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginPageActivity" android:background="@android:color/holo_green_light">

    <EditText
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:paddingLeft="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/etEmail_Login" android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.502"
            android:layout_marginStart="32dp" android:layout_marginEnd="32dp"
            android:background="@drawable/etrounded_register_login"
            android:hint="EMAIL"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:inputType="textPassword"
            android:ems="10"
            android:paddingLeft="16dp"
            app:layout_constraintStart_toStartOf="@+id/etEmail_Login"
            app:layout_constraintEnd_toEndOf="@+id/etEmail_Login" android:id="@+id/etPassword_Login" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/etEmail_Login"
            android:background="@drawable/etrounded_register_login"
            android:hint="PASSWORD"/>
    <Button
            android:text="LOGIN"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:background="@drawable/rounded_button"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/etPassword_Login" app:layout_constraintEnd_toEndOf="@+id/etEmail_Login"
            android:id="@+id/buLogin" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/etPassword_Login" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Back to Register Page"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvRegisterPage"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/buLogin" app:layout_constraintStart_toStartOf="@+id/etEmail_Login"
            app:layout_constraintEnd_toEndOf="@+id/etEmail_Login" android:textColor="@android:color/white"
            android:textSize="14sp" android:textAlignment="center"/>
</android.support.constraint.ConstraintLayout>